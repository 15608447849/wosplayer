<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wosplayer"
    android:versionCode="11"
    android:versionName="11.0"
    android:screenOrientation="portrait">

    <application
        android:name=".app.DisplayerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:sharedUserId="android.uid.system"
        android:hardwareAccelerated="true">

        <!-- 启动activity-->
        <activity android:name=".app.DisplayActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 接受通讯服务的广播 -> 派发任务-->
        <receiver android:name=".command.kernal.CommandCenter">
            <intent-filter>
                <action android:name="com.post.cmd.broad" />
            </intent-filter>
        </receiver>
        <!-- 下载完成广播-->
        <receiver android:name=".download.kernal.DownloadCompleterBroadcast" >
            <intent-filter>
                <action android:name="com.complete.taskList"/>
            </intent-filter>
        </receiver>
        <!-- 通知ui执行者 广播接受-->
        <receiver android:name=".Ui.uiBroadcast.UibrocdCastReceive" >
            <intent-filter>
                <action android:name="com.wos.ui.refresh" />
            </intent-filter>
        </receiver>

        <!-- 通讯服务 android:process=":remote_communication" -->
        <service android:name=".service.CommunicationService" android:process=":remote_communication"/>
        <!-- 接受下载 队列 android:process=":remote_loader" -->
        <service android:name=".download.kernal.DownloadManager" android:process=":remote_download"/>

        <!-- 更新apk-->
        <service android:name=".service.UpdateApkServer" android:process=":remote_update"/>
        <!-- log-->
        <!-- 记录日志sever  android:process=":remote_log_upload"-->
        <service android:name=".service.serviceLog"  android:process=":remote_log_upload"/>
        <!-- 日志上传  android:process=":remote_log_upload"-->
        <service android:name=".service.logUploadService"  android:process=":remote_log_upload"/>



        <!--监听服务  android:enabled="true"  android:process=".MonitorService"-->
        <service android:name="com.wos.play.rootdir.model_monitor.soexcute.WatchServer" android:process=":remote_monitorService"/>
        <!-- 系统广播  android:process=":remote_monitorService" -->
        <receiver android:name="com.wos.play.rootdir.model_monitor.soexcute.SystemBroads">
                <!-- 开机启动 -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- 拨叉sdcard 广播 -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_MOUNTED"/>
                <action android:name="android.intent.action.MEDIA_EJECT" />
                <data android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <data android:scheme="package" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <action android:name="android.intent.action.PACKAGE_INSTALL" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED" />
                <action android:name="android.intent.action.PACKAGE_FIRST_LAUNCH" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <action android:name="android.intent.action.PACKAGE_VERIFIED" />
            </intent-filter>
        </receiver>

    </application>


    <!-- 权限 -->
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" /> <!-- 安装app -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- 开机启动权限-->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" /> <!-- 允许程序禁用键盘锁 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /><!-- 允许程序在手机屏幕关闭后后台进程仍然运行 -->
    <uses-permission android:name="android.permission.REBOOT" /> <!-- 允许程序重新启动设备 -->
    <!-- 允许设置时区-->
    <uses-permission android:name="android.permission.SET_TIME_ZONE" /> <!-- 设置时区 -->
    <uses-permission android:name="android.permission.SET_TIME"/> <!-- 设置时间 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络 -->
    <uses-permission android:name="android.permission.GET_TASKS" /> <!-- 允许程序获取当前或最近运行的应用-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" /><!-- 允许读写系统设置项 -->
    <uses-permission android:name="android.permission.DELETE_PACKAGES" /> <!-- 允许一个程序删除包 -->
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" /> <!-- 允许一个程序清楚缓存从所有安装的程序在设备中 -->
    <!-- 获取当前WiFi接入的状态以及WLAN热点的信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序改变Wi-Fi连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 允许程序屏幕波或和更多常规的访问帧缓冲数据 用于屏幕截图 -->
    <uses-permission android:name="android.permission.READ_FRAME_BUFFER" />
    <!-- 允许一个程序清除用户设置 -->
    <uses-permission android:name="android.permission.CLEAR_APP_USER_DATA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 显示系统窗口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 允许程序访问有关GSM网络信息 -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" /> <!-- 允许程序读写系统安全敏感的设置项-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" /> <!-- 程序修改全局音频设置 -->
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 在SDCard中创建与删除文件权限 允许挂载和反挂载文件系统可移动存储 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 允许修改话机状态，如电源，人机接口等 -->
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />


</manifest>
